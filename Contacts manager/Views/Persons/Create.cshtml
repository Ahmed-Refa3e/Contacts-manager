@model PersonAddRequest

@{
    ViewBag.Title = "Create Person";
}

<a asp-controller="Persons" asp-action="Index" class="link-hover" style="color: blue; text-decoration: underline;">Back to Persons List</a>
<h2 style="color: #333;">Create Person</h2>

<div class="center-box" style="margin: auto; width: 50%; padding: 10px;">
    <form asp-controller="Persons" asp-action="Create" method="post">

        @*PersonName*@
        <div class="form-field flex" style="display: flex; margin-bottom: 10px;">
            <div class="w-25" style="width: 25%; padding-top: 5px;">
                <label asp-for="PersonName" class="form-label pt" style="display: block;">Person Name</label>
            </div>
            <div class="flex-1" style="flex: 1;">
                <input asp-for="PersonName" class="form-input" style="width: 100%; padding: 8px;" />
                <span asp-validation-for="PersonName" class="text-red" style="color: red;"></span>
            </div>
        </div>

        @*Email*@
        <div class="form-field flex" style="display: flex; margin-bottom: 10px;">
            <div class="w-25" style="width: 25%; padding-top: 5px;">
                <label asp-for="Email" class="form-label pt" style="display: block;">Email</label>
            </div>
            <div class="flex-1" style="flex: 1;">
                <input asp-for="Email" class="form-input" style="width: 100%; padding: 8px;" />
                <span asp-validation-for="Email" class="text-red" style="color: red;"></span>
            </div>
        </div>

        @*DateOfBirth*@
        <div class="form-field flex" style="display: flex; margin-bottom: 10px;">
            <div class="w-25" style="width: 25%; padding-top: 5px;">
                <label asp-for="DateOfBirth" class="form-label pt" style="display: block;">Date of Birth</label>
            </div>
            <div class="flex-1" style="flex: 1;">
                <input asp-for="DateOfBirth" class="form-input" style="width: 100%; padding: 8px;" />
                <span asp-validation-for="DateOfBirth" class="text-red" style="color: red;"></span>
            </div>
        </div>

        @*Gender*@
        <div class="form-field flex" style="display: flex; margin-bottom: 10px;">
            <div class="w-25" style="width: 25%; padding-top: 5px;">
                <label class="form-label" style="display: block;">Gender</label>
            </div>
            <div class="flex-1" style="flex: 1;">
                @{
                    string[] genders = (string[])Enum.GetNames(typeof(Gender));
                }
                @foreach (string gender in genders)
                {
                    <input type="radio" asp-for="Gender" value="@gender" />
                    <label for="@gender" style="margin-right: 10px;">@gender</label>
                }
                <span asp-validation-for="Gender" class="text-red" style="color: red;"></span>
            </div>
        </div>

        @*Country*@
        <div class="form-field flex" style="display: flex; margin-bottom: 10px;">
            <div class="w-25" style="width: 25%; padding-top: 5px;">
                <label class="form-label" asp-for="CountryID" style="display: block;">Country</label>
            </div>
            <div class="flex-1" style="flex: 1;">
                <select asp-for="CountryID" class="form-input" asp-items="@ViewBag.Countries" style="width: 100%; padding: 8px;">
                    <option value="">Please Select</option>
                </select>
                <span asp-validation-for="CountryID" class="text-red" style="color: red;"></span>
            </div>
        </div>

        @*Address*@
        <div class="form-field flex" style="display: flex; margin-bottom: 10px;">
            <div class="w-25" style="width: 25%; padding-top: 5px;">
                <label asp-for="Address" class="form-label pt" style="display: block;">Address</label>
            </div>
            <div class="flex-1" style="flex: 1;">
                <textarea asp-for="Address" class="form-input" style="width: 100%; padding: 8px;"></textarea>
                <span asp-validation-for="Address" class="text-red" style="color: red;"></span>
            </div>
        </div>

        @*ReceiveNewsLetters*@
        <div class="form-field flex" style="display: flex; margin-bottom: 10px;">
            <div class="w-25" style="width: 25%; padding-top: 5px;">
            </div>
            <div class="flex-1" style="flex: 1;">
                <input asp-for="ReceiveNewsLetters" value="true" />
                <label asp-for="ReceiveNewsLetters" class="form-label" style="margin-left: 5px;">Receive News Letters</label>
                <span asp-validation-for="ReceiveNewsLetters" class="text-red" style="color: red;"></span>
            </div>
        </div>

        @*Submit*@
        <div class="form-field flex" style="display: flex; margin-bottom: 10px;">
            <div class="w-25" style="width: 25%; padding-top: 5px;">
            </div>
            <div class="flex-1" style="flex: 1;">
                <button class="button button-green-back" style="background-color: #007bff; color: white; padding: 10px 20px; border: none; border-radius: 4px; cursor: pointer;">Create</button>

                <div asp-validation-summary="All" class="text-red" style="color: red;"></div>

                @if (ViewBag.Errors != null)
                {
                    <div class="text-red ml" style="margin-left: 10px; color: red;">
                        <ul>
                            @foreach (string error in ViewBag.Errors)
                            {
                                <li class="ml" style="margin-left: 20px;">@error</li>
                            }
                        </ul>
                    </div>
                }
            </div>
        </div>

    </form>
</div>

@section scripts
{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" asp-fallback-test="window.jQuery" asp-fallback-src="~/jquery.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.4/jquery.validate.min.js" asp-fallback-test="window.jQuery.validator" asp-fallback-src="~/jquery.validate.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js" asp-fallback-test="window.jQuery.validator.unobtrusive" asp-fallback-src="~/jquery.validate.unobtrusive.min.js"></script>
}
