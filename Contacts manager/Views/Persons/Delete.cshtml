@model PersonResponse

@{
    ViewBag.Title = "Delete Person";
}

<a asp-controller="Persons" asp-action="Index" style="text-decoration: underline; cursor: pointer; color: #007bff;">Back to Persons List</a>
<h2>Delete Person</h2>
<h3>Are you sure you want to delete this person?</h3>

<div style="text-align: center;">
    <form asp-controller="Persons" asp-action="Delete" method="post">

        <input type="hidden" asp-for="PersonID" />

        @*PersonName*@
        <div style="display: flex; justify-content: center; margin-bottom: 10px;">
            <div style="width: 25%; text-align: right; padding-right: 10px;">
                <label asp-for="PersonName" style="padding-top: 5px;">Person Name</label>
            </div>
            <div style="flex-grow: 1;">
                <input asp-for="PersonName" style="width: 100%;" disabled="disabled" />
                <span asp-validation-for="PersonName" style="color: red;"></span>
            </div>
        </div>

        @*Email*@
        <div style="display: flex; justify-content: center; margin-bottom: 10px;">
            <div style="width: 25%; text-align: right; padding-right: 10px;">
                <label asp-for="Email" style="padding-top: 5px;">Email</label>
            </div>
            <div style="flex-grow: 1;">
                <input asp-for="Email" style="width: 100%;" disabled="disabled" />
                <span asp-validation-for="Email" style="color: red;"></span>
            </div>
        </div>

        @*Submit*@
        <div style="display: flex; justify-content: center; margin-bottom: 10px;">
            <div style="width: 25%;">
            </div>
            <div style="flex-grow: 1;">
                <button style="background-color: #dc3545; color: white; padding: 10px 20px; border: none; border-radius: 4px; cursor: pointer;">Delete</button>

                <div asp-validation-summary="All" style="color: red;"></div>

                @if (ViewBag.Errors != null)
                {
                    <div style="color: red; margin-left: 10px;">
                        <ul>
                            @foreach (string error in ViewBag.Errors)
                            {
                                <li>@error</li>
                            }
                        </ul>
                    </div>
                }
            </div>
        </div>

    </form>
</div>
